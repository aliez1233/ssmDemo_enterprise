<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.my.dao.DeptDao">
    <!-- List<Books> queryALLBook() -->
    <select id="queryALLDept" resultType="com.my.vo.Dept">
        SELECT * FROM dept
    </select>
    <!-- int insertBook(Books book) -->
    <insert id="insertDept">
        insert into dept
            VALUE(#{id},#{name},#{number})
    </insert>
    <!-- int updateBook(Books book) -->
    <update id="updateDept">
        update dept set name = #{name},number = #{number}
        where id = #{id}
    </update>
    <!-- Books queryBookById(int id) -->
    <select id="queryDeptById" resultType="com.my.vo.Dept">
        select * from dept where id=#{id}
    </select>
    <!-- int deleteBookById(int id) -->
    <delete id="deleteDeptById">
        delete from dept where id=#{id}
    </delete>
</mapper>