<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.my.dao.ItemMapper">

    <select id="queryAllItem" resultType="com.my.vo.Items">
        SELECT * FROM item
    </select>
    <insert id="insertItem">
        insert into item  values
            (#{itemId},#{userName},#{itemTitle},#{itemDate},#{itemContent})
    </insert>

    <delete id="deleteItemById" >
        delete from item where itemId=#{itemId}
    </delete>

    <update id="updateItem">
    update item set  userName=#{userName}, itemTitle= #{itemTitle},itemDate= #{itemDate},itemContent = #{itemContent}
    where itemId = #{itemId}
    </update>

    <select id="queryItemById" resultType="com.my.vo.Items">
        select * from item where itemId=#{itemId}
    </select>
</mapper>