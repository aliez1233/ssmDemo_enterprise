<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.my.dao.EmployeeDao">
    <!-- List<Books> queryALLBook() -->
    <select id="queryALLEmployee" resultType="com.my.vo.Employee">
        SELECT * FROM employee
    </select>

    <insert id="insertEmployee">
        insert into employee
            VALUE(#{employeeId},#{employeeName},#{employeeSex},#{employeeDept},#{employeeDutyType},#{tel},#{address})
    </insert>

    <update id="updateEmployee">
        update employee set employeeName =#{employeeName},employeeSex = #{employeeSex},employeeDept =
            #{employeeDept},employeeDutyType = #{employeeDutyType},tel = #{tel},address = #{address}
        where employeeId = #{employeeId}
    </update>

    <select id="queryEmployeeById" resultType="com.my.vo.Employee">
        select * from employee where employeeId=#{employeeId}
    </select>

    <delete id="deleteEmployeeById">
        delete from employee where employeeId=#{employeeId}
    </delete>
</mapper>